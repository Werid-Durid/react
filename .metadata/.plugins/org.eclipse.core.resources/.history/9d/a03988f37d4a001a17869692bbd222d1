package 练习题;

public class 计算二进制 {
	
	public static int x2=0;
static int jinzhi(int x) {
	if(x/2>0) {
		if(x%2==1) {
		x2++;
		System.out.println(x+"   "+x2);
		jinzhi(x/2);
		}
		if(x%2==0) {
			System.out.println(x);
			jinzhi(x/2);
		}
	}
if(x==1) {x2++;}
	return x2;	
	

	
}
public static void main(String[] args) {
	System.out.println(jinzhi(60));
}
}


